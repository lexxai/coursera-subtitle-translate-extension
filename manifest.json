{
  "manifest_version": 3,
  "name": "Coursera Subtitle Translation",
  "description": "Coursera Subtitle Translation (lexxai)",
  "version": "1.3.0",
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["https://*.coursera.org/*"],
  "content_scripts": [
    {
      "matches": ["*://www.coursera.org/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "permissions": ["tabs", "storage", "activeTab"]
}
